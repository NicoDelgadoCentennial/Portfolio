<!DOCTYPE html>
<html>
    <head>
        <title>Business Contacts</title> 
        <link rel = "icon" href = "assets/Logo.png" type = "image/x-icon">
        <link rel="stylesheet" type="text/css" href="/css/styles.css">
    </head>
    <body>
    <%- include('partials/navbar.ejs') %>
    <div class="contact-container">
        <h2>Update Contacts</h2>
        <form id="updateForm">
            <label for="name">Name:</label>
            <input type="text" id="name" required><br><br>
        
            <label for="email">Email:</label>
            <input type="email" id="email" required><br><br>
        
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" required><br><br>
        
            <button type="button" id="updateButton">Update</button><br>
            <button type="button" id="cancelButton">Cancel</button><br>
            <button type="button" id="deleteButton">Delete</button><br>
          </form>
        
          <script src="update.js"></script>
    </div>
    <%- include('partials/footer.ejs') %>
    </body>
</html>
